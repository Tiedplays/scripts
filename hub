-- Zenith Fans Premium | Nebula Glass UI (Full)

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Stats = game:GetService("Stats")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local ICON_ID = "rbxassetid://118551308102810"

-- ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "ZenithFansPremiumUI"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

--======================
-- Main Bar
--======================
local bar = Instance.new("Frame")
bar.Size = UDim2.new(0, 620, 0, 62)
bar.Position = UDim2.new(0.5, -310, 1, -130)
bar.BackgroundColor3 = Color3.fromRGB(10, 10, 12)
bar.BackgroundTransparency = 0.25
bar.BorderSizePixel = 0
bar.Parent = gui
Instance.new("UICorner", bar).CornerRadius = UDim.new(0, 18)

-- Stroke
local stroke = Instance.new("UIStroke")
stroke.Thickness = 2
stroke.Parent = bar

local strokeGradient = Instance.new("UIGradient")
strokeGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(170, 90, 255)),
	ColorSequenceKeypoint.new(0.4, Color3.fromRGB(140, 80, 230)),
	ColorSequenceKeypoint.new(0.7, Color3.fromRGB(190, 100, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(170, 90, 255))
}
strokeGradient.Parent = stroke

-- Padding
local pad = Instance.new("UIPadding")
pad.PaddingLeft = UDim.new(0, 16)
pad.PaddingRight = UDim.new(0, 16)
pad.PaddingTop = UDim.new(0, 8)
pad.PaddingBottom = UDim.new(0, 8)
pad.Parent = bar

-- Icon
local logo = Instance.new("ImageLabel")
logo.Image = ICON_ID
logo.Size = UDim2.new(0, 30, 0, 30)
logo.BackgroundTransparency = 1
logo.Parent = bar

local logoGradient = Instance.new("UIGradient")
logoGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(200, 140, 255)),
	ColorSequenceKeypoint.new(0.5, Color3.fromRGB(170, 90, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(200, 140, 255))
}
logoGradient.Parent = logo

-- Title
local title = Instance.new("TextLabel")
title.Text = "Zenith Fans Premium"
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.TextColor3 = Color3.fromRGB(215, 180, 255)
title.BackgroundTransparency = 1
title.Position = UDim2.new(0, 38, 0, -2)
title.Size = UDim2.new(0, 260, 0.55, 0)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = bar

local subtitle = Instance.new("TextLabel")
subtitle.Text = "by @tiedplays_yt | discord.gg/8YMAN3SnQc"
subtitle.Font = Enum.Font.Gotham
subtitle.TextSize = 14
subtitle.TextColor3 = Color3.fromRGB(200, 200, 210)
subtitle.BackgroundTransparency = 1
subtitle.Position = UDim2.new(0, 38, 0.45, 0)
subtitle.Size = UDim2.new(0, 360, 0.55, 0)
subtitle.TextXAlignment = Enum.TextXAlignment.Left
subtitle.Parent = bar

-- Right Side
local right = Instance.new("Frame")
right.Size = UDim2.new(0, 230, 1, 0)
right.Position = UDim2.new(1, -230, 0, 0)
right.BackgroundTransparency = 1
right.Parent = bar

local layout = Instance.new("UIListLayout")
layout.HorizontalAlignment = Enum.HorizontalAlignment.Right
layout.VerticalAlignment = Enum.VerticalAlignment.Center
layout.Parent = right

local hint = Instance.new("TextLabel")
hint.Text = "Hide / Open Settings : T"
hint.Font = Enum.Font.GothamBold
hint.TextSize = 14
hint.TextColor3 = Color3.fromRGB(235, 235, 255)
hint.BackgroundTransparency = 1
hint.Size = UDim2.new(1, 0, 0.5, 0)
hint.TextXAlignment = Enum.TextXAlignment.Right
hint.Parent = right

local statsLabel = Instance.new("TextLabel")
statsLabel.Text = "FPS: 0    PING: 0ms"
statsLabel.Font = Enum.Font.GothamBold
statsLabel.TextSize = 14
statsLabel.TextColor3 = Color3.fromRGB(235, 235, 255)
statsLabel.BackgroundTransparency = 1
statsLabel.Size = UDim2.new(1, 0, 0.5, 0)
statsLabel.TextXAlignment = Enum.TextXAlignment.Right
statsLabel.Parent = right

-- FPS / Ping
local frames, last = 0, os.clock()
RunService.RenderStepped:Connect(function()
	frames += 1
	if os.clock() - last >= 1 then
		local ping = math.floor(Stats.Network.ServerStatsItem["Data Ping"]:GetValue())
		statsLabel.Text = "FPS: "..frames.."    PING: "..ping.."ms"
		frames = 0
		last = os.clock()
	end
end)

-- Animate gradients
task.spawn(function()
	local a = 0
	while true do
		a += 0.6
		strokeGradient.Rotation = a
		logoGradient.Rotation = a
		RunService.RenderStepped:Wait()
	end
end)

--======================
-- Toggle UI (TITLE ONLY)
--======================
local toggleUI = Instance.new("Frame")
toggleUI.Size = UDim2.new(0, 300, 0, 90)
toggleUI.Position = UDim2.new(0.5, -150, 0.5, -45)
toggleUI.BackgroundColor3 = Color3.fromRGB(14, 14, 18)
toggleUI.BackgroundTransparency = 0.25
toggleUI.BorderSizePixel = 0
toggleUI.Visible = false
toggleUI.Parent = gui
Instance.new("UICorner", toggleUI).CornerRadius = UDim.new(0, 12)

local toggleGradient = Instance.new("UIGradient")
toggleGradient.Color = strokeGradient.Color
toggleGradient.Parent = toggleUI

task.spawn(function()
	local a = 0
	while true do
		a += 0.4
		toggleGradient.Rotation = a
		RunService.RenderStepped:Wait()
	end
end)

local toggleTitle = Instance.new("TextLabel")
toggleTitle.Text = "Zenith Fans Premium"
toggleTitle.Font = Enum.Font.GothamBold
toggleTitle.TextSize = 22
toggleTitle.TextColor3 = Color3.fromRGB(215, 180, 255)
toggleTitle.BackgroundTransparency = 1
toggleTitle.Size = UDim2.new(1, 0, 1, 0)
toggleTitle.TextXAlignment = Enum.TextXAlignment.Center
toggleTitle.TextYAlignment = Enum.TextYAlignment.Top
toggleTitle.Position = UDim2.new(0, 0, 0, 16)
toggleTitle.Parent = toggleUI

-- Toggle with T
UserInputService.InputBegan:Connect(function(i, gp)
	if gp then return end
	if i.KeyCode == Enum.KeyCode.T then
		toggleUI.Visible = not toggleUI.Visible
	end
end)
